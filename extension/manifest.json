{
    "manifest_version": 3,
    "name": "SnapAuth",
    "version": "1.0",
    "description": "A Chrome extension for authentication with face livliness",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "icons": {
        "48": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
